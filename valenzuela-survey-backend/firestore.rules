rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin collection - only authenticated admins
    match /admins/{adminId} {
      allow read, write: if isAdmin(request.auth.uid);
    }
    
    // Surveys - admins can CRUD, citizens can read active surveys
    match /surveys/{surveyId} {
      allow read: if resource.data.status == 'active' || isAdmin(request.auth.uid);
      allow create, update, delete: if isAdmin(request.auth.uid);
    }
    
    // Responses - anyone can create, admins can read
    match /responses/{responseId} {
      allow create: if isValidResponse();
      allow read: if isAdmin(request.auth.uid);
      allow update, delete: if false; // Responses are immutable
    }
    
    // Citizens - users can read/update their own data
    match /citizens/{citizenId} {
      allow read, update: if request.auth != null && request.auth.uid == citizenId;
      allow create: if request.auth != null;
    }
    
    // Categories and Settings - read for all, write for admins
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin(request.auth.uid);
    }
    
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin(request.auth.uid);
    }
    
    // Helper functions
    function isAdmin(uid) {
      return uid != null && 
        exists(/databases/$(database)/documents/admins/$(uid)) &&
        get(/databases/$(database)/documents/admins/$(uid)).data.isActive == true;
    }
    
    function isValidResponse() {
      let data = request.resource.data;
      return data.surveyId is string &&
             data.answers is map &&
             data.submittedAt is timestamp;
    }
  }
}